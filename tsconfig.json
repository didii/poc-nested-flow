{
    "compilerOptions": {
        "target": "es5",
        "lib": ["ES5", "ES6", "DOM"],
        "jsx": "react",
        "module": "ES2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "sourceMap": true,
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true
    }
}
